{
  "name": "hydrator",
  "version": "0.0.1",
  "description": "Turn Twitter identifiers into JSON",
  "repository": "https://github/com/hydrator",
  "dependencies": {
    "flux": "^2.1.1",
    "react": "^0.14.5",
    "react-dom": "^0.14.5"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "uglify": "^0.1.5",
    "watchify": "^3.6.1"
  },
  "main": "js/app.js",
  "scripts": {
    "build-js": "browserify js/app.js | uglifyjs -cm > js/bundle.min.js",
    "watch": "watchify -o js/bundle.js -v -d js/app.js"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "react"
          ]
        }
      ]
    ]
  }
}
